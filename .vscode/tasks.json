{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build task",
            "type": "shell",
            "command": "mingw32-make",
            "args": ["-j24"],
            "options": {
                "env": {
                    "GCC_PATH": "${env:GCC_PATH}"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "download dap",
            "type": "shell",
            "command": "mingw32-make",
            "args": ["-j24"],
            "options": {
                "shell": {
                    "args": ["-Command", "mingw32-make -j24; mingw32-make download_dap"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "setup jlink (copy from system)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy", "Bypass",
                "-File", ".\\scripts\\download-jlink.ps1"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "log",
            "type": "shell",
            "command": "JlinkRTTClient",
            "args": [],
            "problemMatcher": []
        }
    ]
}